/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
} 

/* 全局颜色变量 */
page {
  --primary-color: #007AFF;
  --success-color: #34C759;
  --warning-color: #FF9500;
  --danger-color: #FF3B30;
  --text-color: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --background: #F5F5F5;
  --border-color: #EEEEEE;
  
  background: var(--background);
  color: var(--text-color);
  font-size: 28rpx;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 通用按钮样式 */
.btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  transition: opacity 0.2s;
}

.btn-primary {
  background: var(--primary-color);
  color: white;
}

.btn-success {
  background: var(--success-color);
  color: white;
}

.btn-warning {
  background: var(--warning-color);
  color: white;
}

.btn-danger {
  background: var(--danger-color);
  color: white;
}

/* 通用输入框样式 */
.input {
  height: 88rpx;
  padding: 0 30rpx;
  border-radius: 12rpx;
  border: 2rpx solid var(--border-color);
  background: white;
  font-size: 28rpx;
}

/* 通用标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 20rpx;
  color: var(--text-color);
}

/* 通用列表样式 */
.list-item {
  background: white;
  padding: 30rpx;
  margin-bottom: 2rpx;
  display: flex;
  align-items: center;
}

/* 通用图标样式 */
.icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 通用标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 通用分割线 */
.divider {
  height: 2rpx;
  background: var(--border-color);
  margin: 20rpx 0;
}

/* 通用加载动画 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
}

/* 通用导航栏 */
.nav-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: white;
  display: flex;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
  color: var(--text-secondary);
}

.nav-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.nav-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
} 
