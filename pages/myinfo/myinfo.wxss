.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

/* 联系方式 */
.user-contact {
  margin-top: 20rpx;
}
.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.label {
  font-size: 30rpx;
  width: 150rpx;
}
.input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
}
.save-btn {
  margin-top: 20rpx;
  background-color: #ff5722;
  color: white;
  font-size: 30rpx;
}

/* 订单切换 */
.tab-switch {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ddd;
}
.tab {
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  color: gray;
}
.active {
  font-weight: bold;
  color: #ff5722;
}

/* 订单列表 */
.ride-list {
  margin-top: 20rpx;
}
.ride-card {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.ride-item {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.ride-header {
  padding: 20rpx;
  background: var(--primary-color);
  color: white;
}

.date, .time {
  font-size: 26rpx;
  opacity: 0.9;
}

.ride-content {
  padding: 20rpx;
  background: white;
}

.location-info {
  margin: 15rpx 0;
}

.departure, .arrival {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  margin-right: 15rpx;
  font-size: 24rpx;
  color: white;
}

.departure .icon {
  background: var(--primary-color);
}

.arrival .icon {
  background: var(--success-color);
}

.ride-details {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.price {
  color: #ff5722;
  font-weight: bold;
}

.seats {
  color: #666;
}

input {
  width: 100%;
  padding: 10rpx;
  margin: 10rpx 0;
  font-size: 32rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

button {
  width: 100%;
  margin-top: 10rpx;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.tab-bar button {
  flex: 1;
  padding: 10rpx;
  font-size: 30rpx;
  background-color: #ddd;
  color: #333;
  border: none;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.tab-bar button.active {
  background-color: #00aa00;
  color: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 20rpx 10rpx;
  color: #333;
}

.ride-item, .request-item {
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.label {
  font-weight: bold;
  margin-right: 10rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

input {
  flex: 1;
  padding: 8rpx;
  border: 1px solid #ccc;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.edit-btn {
  background: #ffa500;
  color: white;
}

.delete-btn {
  background: #ff5722;
  color: white;
}

.action-btn:active {
  opacity: 0.8;
}

.action-section {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.scroll-container {
  height: 100vh;
}

.tab-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  background: white;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #007AFF;
  font-weight: bold;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 2rpx;
}

.edit-section {
  margin: 20rpx 0;
  padding: 20rpx;
  background: var(--background);
  border-radius: 12rpx;
}

.edit-item {
  margin: 15rpx 0;
}

.edit-input {
  height: 80rpx;
  padding: 0 20rpx;
  background: white;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
}

.save-btn {
  background: #007AFF;
  color: white;
}
