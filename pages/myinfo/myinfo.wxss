.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

/* 联系方式 */
.user-contact {
  margin-top: 20rpx;
}
.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.label {
  font-size: 30rpx;
  width: 150rpx;
}
.input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
}
.save-btn {
  margin-top: 20rpx;
  background-color: #ff5722;
  color: white;
  font-size: 30rpx;
}

/* 订单切换 */
.tab-switch {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ddd;
}
.tab {
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  color: gray;
}
.active {
  font-weight: bold;
  color: #ff5722;
}

/* 订单列表 */
.ride-list {
  margin-top: 20rpx;
}
.ride-card {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.ride-item {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

input {
  width: 100%;
  padding: 10rpx;
  margin: 10rpx 0;
  font-size: 32rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

button {
  width: 100%;
  margin-top: 10rpx;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.tab-bar button {
  flex: 1;
  padding: 10rpx;
  font-size: 30rpx;
  background-color: #ddd;
  color: #333;
  border: none;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.tab-bar button.active {
  background-color: #00aa00;
  color: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.ride-item, .request-item {
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.label {
  font-weight: bold;
  margin-right: 10rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

input {
  flex: 1;
  padding: 8rpx;
  border: 1px solid #ccc;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.action-btn {
  background-color: #007aff;
  color: white;
  padding: 10rpx;
  border-radius: 6rpx;
  margin-top: 10rpx;
  text-align: center;
}

.delete-btn {
  background-color: #ff5722;
}
