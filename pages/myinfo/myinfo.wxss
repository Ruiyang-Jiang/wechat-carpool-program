/* ---------- 顶部 Tab ---------- */
.tabs{
  display:flex;
  background:#fff;
  border-bottom:1rpx solid #f2f2f2;
}
.tab{
  flex:1;
  text-align:center;
  padding:24rpx 0;
  font-size:30rpx;
  color:#666;
}
.tab.active{
  color:#07c160;
  font-weight:600;
  border-bottom:4rpx solid #07c160;
}

/* ---------- 卡片 ---------- */
.ride-card{
  margin:20rpx 24rpx;
  padding:24rpx;
  background:#fff;
  border-radius:16rpx;
  box-shadow:0 6rpx 18rpx rgba(0,0,0,.04);
}
.ride-card.past{ opacity:.55; }

/* header */
.ride-header{
  display:flex;
  align-items:center;
  margin-bottom:12rpx;
}
.badge{
  padding:4rpx 16rpx;
  font-size:24rpx;
  border-radius:16rpx;
  margin-right:12rpx;
}
.badge-driver    { background:#E8F9E5; color:#1BA400; }
.badge-passenger { background:#E5F1FF; color:#0061CC; }

.ride-date{ font-size:26rpx; }
.date-past{ color:#999; text-decoration:line-through; }

.expired-badge{
  margin-left:12rpx;
  font-size:24rpx;
  color:#F76161;
}

/* body */
.ride-body .row{
  display:flex;
  align-items:center;
  margin:8rpx 0;
  font-size:26rpx;
}

/* 统一左侧标签宽度，输入框自动撑开 */
.field-label{
  width:170rpx;          /* 如有需要可微调 */
  flex-shrink:0;
  font-size:26rpx;
  color:#333;
}
.bold{ font-weight:600; }

.edit-input{
  flex:1;
  margin-left:16rpx;
  padding:10rpx 14rpx;
  border:2rpx solid #07c160;
  border-radius:10rpx;
  background:#f6fff5;
  font-size:30rpx;
}

/* 途经点显示样式 */
.stopovers-display{
  display:flex;
  flex-wrap:wrap;
  gap:6rpx;
  margin-top:4rpx;
}

.stopover-tag{
  background:#e3f2fd;
  color:#1976d2;
  padding:4rpx 8rpx;
  border-radius:12rpx;
  font-size:22rpx;
  border:1rpx solid #bbdefb;
}

/* 按钮组 */
.btn-group{
  display:flex;
  gap:24rpx;
  margin-top:16rpx;
}
.empty-tip{
  padding:120rpx 0;
  text-align:center;
  font-size:28rpx;
  color:#999;
}