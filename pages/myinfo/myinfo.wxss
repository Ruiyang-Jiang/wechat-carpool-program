.container {
  padding: 20rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

/* 联系方式 */
.user-contact {
  margin-top: 20rpx;
}
.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.label {
  font-size: 30rpx;
  width: 150rpx;
}
.input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
}
.save-btn {
  margin-top: 20rpx;
  background-color: #ff5722;
  color: white;
  font-size: 30rpx;
}

/* 订单切换 */
.tab-switch {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ddd;
}
.tab {
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  color: gray;
}
.active {
  font-weight: bold;
  color: #ff5722;
}

/* 订单列表 */
.ride-list {
  margin-top: 20rpx;
}
.ride-card {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}
