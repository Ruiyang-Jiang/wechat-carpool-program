/* ---------- 顶部 Tab ---------- */
.tabs{
  display:flex;
  background:#fff;
  border-bottom:1rpx solid #f2f2f2;
}
.tab{
  flex:1;
  text-align:center;
  padding:24rpx 0;
  font-size:30rpx;
  color:#666;
}
.tab.active{
  color:#07c160;
  font-weight:600;
  border-bottom:4rpx solid #07c160;
}

/* ---------- 表单卡片 ---------- */
.prompt {
  margin: 10rpx auto;
  padding: 10rpx 15rpx;
  max-width: 90%;
  color: #155724;                  /* 深绿色文字 */
  background-color: #d4edda;       /* 浅绿色背景 */
  border: 1rpx solid #c3e6cb;      /* 浅绿边框 */
  border-radius: 12rpx;            /* 圆角 */
  font-size: 28rpx;
  text-align: center;
  line-height: 1.6;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08); /* 阴影 */
  animation: fadeIn 1s ease;
}

/* 简单淡入效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-8rpx); }
  to   { opacity: 1; transform: translateY(0); }
}

.form-card{
  margin:24rpx;
  padding:30rpx 24rpx;
  background:#fff;
  border-radius:18rpx;
  box-shadow:0 6rpx 20rpx rgba(0,0,0,.04);
}

/* 行 */
.input-row{
  display:flex;
  align-items:center;
  margin:20rpx 0;
}
.label{
  width:160rpx;
  font-size:28rpx;
  color:#333;
}
.input{
  flex:1;
  padding:16rpx 20rpx;
  font-size:28rpx;
  background:#f7f7f7;
  border:1rpx solid #e0e0e0;
  border-radius:12rpx;
  box-sizing:border-box;
}

/* picker look like input */
.picker{
  flex:1;
  padding:16rpx 20rpx;
  font-size:28rpx;
  color:#333;
  background:#f7f7f7;
  border:1rpx solid #e0e0e0;
  border-radius:12rpx;
}

/* 搜索按钮 */
.search-btn{
  margin-top:32rpx;
  font-size:30rpx;
  background:#07c160;
}

/* ---------- 城市下拉建议 ---------- */
.suggestion-list{
  margin-top:-10rpx;
  background:#fff;
  border:1rpx solid #e0e0e0;
  border-top:none;
  border-radius:0 0 12rpx 12rpx;
  max-height:300rpx;
  overflow-y:auto;
  box-shadow:0 4rpx 12rpx rgba(0,0,0,.05);
}
.suggest-item{
  padding:18rpx 26rpx;
  font-size:28rpx;
  color:#333;
}
.suggest-item + .suggest-item{ border-top:1rpx solid #f3f3f3; }
.suggest-item:active{ background:#f2fdf4; }

/* ---------- 底部声明与快捷入口 ---------- */
.privacy-footer{
  position:fixed;
  left:0; right:0; bottom:20rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  gap:12rpx;
  pointer-events:auto;
  padding: 0 20rpx;
}
.privacy-hint{
  font-size:22rpx;
  color:#666;
  text-align:center;
}
.privacy-btn{
  background:#e6f7ec;
  color:#0a8f3e;
  border:1rpx solid #b8e6c9;
  padding:10rpx 18rpx;
  border-radius:999rpx;
  box-shadow:0 2rpx 8rpx rgba(0,0,0,.04);
}
.privacy-btn:active{ opacity:.8 }

/* 底部三列卡片布局 */
.footer-grid{
  width:100%;
  max-width: 680rpx;
  display:grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}
.footer-card{
  background:#fff;
  border:1rpx solid #eee;
  border-radius:12rpx;
  padding:12rpx;
  text-align:center;
}
.footer-title{
  font-size:24rpx;
  color:#333;
  margin-bottom:6rpx;
}
.footer-buttons{ display:flex; flex-direction:column; gap:8rpx; }

/* 外层卡片 */
.privacy-footer {
  max-width: 700rpx;
  margin: 32rpx auto;
  padding: 20rpx 24rpx;
  background: #fafbfc;
  border: 1rpx solid #e6e7eb;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.04);
}

/* 顶部提示行 */
.pf-tip {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 20rpx;
}
.pf-tip-icon {
  font-size: 28rpx;
  line-height: 1.6;
}
.pf-tip-text {
  font-size: 24rpx;
  color: #596780;
  line-height: 1.6;
  word-break: break-word;
}

/* 按钮区：三等分 */
.pf-actions {
  display: flex;
  gap: 12rpx;
}
.pf-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 5rpx;   /* 按钮更窄 */
  font-size: 10rpx;      /* 小一号 */
  background: #07c160;   /* 与上方“搜索顺风车”同色 */
  color: #fff;
  border: 1rpx solid #07c160;
  border-radius: 12rpx;
  white-space: nowrap;
}
.pf-btn-icon { font-size: 22rpx; color: #fff; }
.pf-btn:active { background: #06ad56; transform: scale(0.98); opacity: 1; }
.pf-btn-danger {
  background: #07c160;
  border-color: #07c160;
  color: #fff;
}

/* 可选：底部安全区（若放页面最底部时启用）
.privacy-footer { padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); }
