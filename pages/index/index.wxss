/* ---------- 顶部 Tab ---------- */
.tabs{
  display:flex;
  background:#fff;
  border-bottom:1rpx solid #f2f2f2;
}
.tab{
  flex:1;
  text-align:center;
  padding:24rpx 0;
  font-size:30rpx;
  color:#666;
}
.tab.active{
  color:#07c160;
  font-weight:600;
  border-bottom:4rpx solid #07c160;
}

/* ---------- 表单卡片 ---------- */
.prompt {
  margin: 10rpx auto;
  padding: 10rpx 15rpx;
  max-width: 90%;
  color: #155724;                  /* 深绿色文字 */
  background-color: #d4edda;       /* 浅绿色背景 */
  border: 1rpx solid #c3e6cb;      /* 浅绿边框 */
  border-radius: 12rpx;            /* 圆角 */
  font-size: 28rpx;
  text-align: center;
  line-height: 1.6;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08); /* 阴影 */
  animation: fadeIn 1s ease;
}

/* 简单淡入效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-8rpx); }
  to   { opacity: 1; transform: translateY(0); }
}

.form-card{
  margin:24rpx;
  padding:30rpx 24rpx;
  background:#fff;
  border-radius:18rpx;
  box-shadow:0 6rpx 20rpx rgba(0,0,0,.04);
}

/* 行 */
.input-row{
  display:flex;
  align-items:center;
  margin:20rpx 0;
}
.label{
  width:160rpx;
  font-size:28rpx;
  color:#333;
}
.input{
  flex:1;
  padding:16rpx 20rpx;
  font-size:28rpx;
  background:#f7f7f7;
  border:1rpx solid #e0e0e0;
  border-radius:12rpx;
  box-sizing:border-box;
}

/* picker look like input */
.picker{
  flex:1;
  padding:16rpx 20rpx;
  font-size:28rpx;
  color:#333;
  background:#f7f7f7;
  border:1rpx solid #e0e0e0;
  border-radius:12rpx;
}

/* 搜索按钮 */
.search-btn{
  margin-top:32rpx;
  font-size:30rpx;
  background:#07c160;
}

/* ---------- 城市下拉建议 ---------- */
.suggestion-list{
  margin-top:-10rpx;
  background:#fff;
  border:1rpx solid #e0e0e0;
  border-top:none;
  border-radius:0 0 12rpx 12rpx;
  max-height:300rpx;
  overflow-y:auto;
  box-shadow:0 4rpx 12rpx rgba(0,0,0,.05);
}
.suggest-item{
  padding:18rpx 26rpx;
  font-size:28rpx;
  color:#333;
}
.suggest-item + .suggest-item{ border-top:1rpx solid #f3f3f3; }
.suggest-item:active{ background:#f2fdf4; }
