/* 设置整体页面背景和基本间距 */
.container {
  display: block;
  width: 100%;
  padding: 30rpx 26rpx;
  background: var(--background);
}

/* segmented tab */
.segmented {
  display: flex;
  width: 80%;
  margin-bottom: 30rpx;
  margin: 0 auto 30rpx auto;
  border: 2rpx solid var(--primary-color);
  border-radius: 50rpx;
  overflow: hidden;
  
}
.seg-btn {
  flex: 1;
  text-align: center;
  line-height: 66rpx;
  font-size: 30rpx;
  color: var(--primary-color);
  background: #fff;
}
.seg-btn.active {
  background: var(--primary-color);
  color: #fff;
}

/* 每个搜索卡片 */
.search-card {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  border-radius: 24rpx;
  padding: 44rpx 32rpx 36rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,.06);
  margin-bottom: 36rpx;
}

/* 输入框 + 图标 */
.input-group {
  width: 100%;
  margin-bottom: 28rpx;
  position: relative;
}
.input-group .icon {
  position: absolute;
  width: 34rpx; height: 34rpx;
  left: 20rpx; top: 50%;
  transform: translateY(-50%);
  opacity: .8;
  padding: 0%;
}
.input-group input {
  width: 100%;
  height: 86rpx;
  padding: 0 20rpx 0 70rpx;   /* 预留图标空间 */
  border: 2rpx solid #e2e2e2;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 0%;
}

/* 日期按钮 */
.date-btn {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  border: 2rpx dashed #c5c5c5;
  border-radius: 12rpx;
  color: #999;
  background: #fafafa;
  margin-bottom: 28rpx;
}
.date-btn::after { border: none; } /* 去除默认按钮边框 */

/* 主要按钮 */
.primary-btn {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  background: var(--success-color);
  color: #fff;
  padding: 0%;
}
.primary-btn:active { opacity: .8; }

/* 让页面自适应不同屏幕 */
@media screen and (max-width: 400px) {
  .search-block {
    padding: 20rpx;
  }
  .search-block input,
  .search-block picker,
  .search-block button {
    font-size: 28rpx;
    padding: 15rpx;
  }
}
.suggest-item {
  padding: 22rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.15s;
}
