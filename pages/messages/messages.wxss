.container {
  display: flex;
  flex-direction: column;
  padding: 15px;
  background-color: #f5f5f5;
}

.page-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.chat-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-radius: 8px;
  background-color: white;
  margin-bottom: 8px;
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.chat-info {
  flex-grow: 1;
}

.chat-name {
  font-weight: bold;
  font-size: 16px;
}

.last-message {
  font-size: 14px;
  color: gray;
  margin-top: 4px;
}

.chat-time {
  font-size: 12px;
  color: gray;
}
