.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

.chat-item {
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.chat-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.chat-preview {
  font-size: 28rpx;
  color: #666;
}

.page-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.chat-info {
  flex-grow: 1;
}

.chat-name {
  font-weight: bold;
  font-size: 16px;
}

.last-message {
  font-size: 14px;
  color: gray;
  margin-top: 4px;
}

.chat-time {
  font-size: 12px;
  color: gray;
}
