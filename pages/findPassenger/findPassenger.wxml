<view class="container">
  <view class="header">
    <text class="title">可用顺风车</text>
  </view>

  <block wx:if="{{rideList.length}}">
    <block wx:for="{{rideList}}" wx:key="_id">
      <view class="ride-card card" bindtap="goDetail" data-id="{{item._id}}">
        <view class="ride-info">
          <view class="info-row major">
            <text class="value">{{item.departure}}</text>
            <text class="arrow">→</text>
            <text class="value">{{item.destination}}</text>
          </view>
          <view class="info-row minor">
            <text class="label">日期:</text>
            <text class="value">{{item.date}}</text>
            <text class="label">时间:</text>
            <text class="value">{{item.departure_time}}-{{item.arrival_time}}</text>
          </view>
          <view class="info-row minor">
            <text class="label">空座:</text>
            <text class="value">{{item.empty_seats}}</text>
            <text class="label">价格:</text>
            <text class="value price">¥{{item.price}}</text>
          </view>
        </view>
        <button class="primary-btn mini"
                bindtap="takeRide"
                data-id="{{item._id}}">联系</button>
      </view>
    </block>
  </block>

  <view wx:if="{{rideList.length === 0}}" class="no-results">
    <text>暂无匹配的顺风车</text>
  </view>
</view>
