<view class="container">
  <!-- 发布者信息 -->
  <view class="publisher-info">
    <text class="title">发布者信息</text>
    <text class="info">姓名: {{publisherInfo.nickname || '未知'}}</text>
    <view class="wechat-info">
      <text class="info">微信号: ******</text>
      <button class="copy-btn" bindtap="handleCopyWeChat">
        点击获取微信号
      </button>
    </view>
    <text class="info">电话: {{publisherInfo.phone || '未提供'}}</text>
  </view>

  <!-- 顺风车/人找车信息 -->
  <view class="detail-card">
    <text class="title">顺风车详情</text>
    <view class="detail-row">
      <text class="label">出发地:</text>
      <text>{{detail.departure_place.city}}, {{detail.departure_place.state}}</text>
    </view>
    <view class="detail-row">
      <text class="label">目的地:</text>
      <text>{{detail.arrival_place.city}}, {{detail.arrival_place.state}}</text>
    </view>
    <view class="detail-row">
      <text class="label">出发时间:</text>
      <text>{{detail.departure_date}} {{detail.departure_time || '未知'}}</text>
    </view>
    <view class="detail-row">
      <text class="label">价格:</text>
      <text>¥{{detail.price}}</text>
    </view>
    <view wx:if="{{itemType === 'rides'}}" class="detail-row">
      <text class="label">空余座位:</text>
      <text>{{detail.empty_seats}}</text>
    </view>
  </view>

  <!-- 接单按钮 -->
  <view class="button-section">
    <button class="accept-btn" bindtap="takeOrder">接单</button>
    <button class="edit-btn" wx:if="{{isOwner}}" bindtap="editItem">修改</button>
    <button class="delete-btn" wx:if="{{isOwner}}" bindtap="deleteItem">删除</button>
  </view>
</view>