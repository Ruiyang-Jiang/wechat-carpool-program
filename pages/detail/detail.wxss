.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 信息标题 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 发布者信息 */
.publisher-info {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.info {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

/* 详情卡片 */
.detail-card {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  font-size: 32rpx;
}

.label {
  font-weight: bold;
  color: #555;
}

/* 交流区 */
.chat-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.message-box {
  height: 300rpx;
  overflow-y: auto;
  border: 1px solid #ddd;
  padding: 10rpx;
}

.message {
  margin-bottom: 10rpx;
}

.user {
  font-weight: bold;
  color: #007aff;
}

.message-input {
  width: 100%;
  padding: 10rpx;
  font-size: 32rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.send-btn {
  width: 100%;
  margin-top: 10rpx;
  background-color: #007aff;
  color: white;
  font-size: 34rpx;
  padding: 10rpx;
  border-radius: 8rpx;
}

/* 按钮区域 */
.button-section {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.accept-btn {
  background-color: #00aa00;
  color: white;
  padding: 12rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  flex: 1;
  margin-right: 10rpx;
}

.edit-btn {
  background-color: #007aff;
  color: white;
  padding: 12rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  flex: 1;
  margin-right: 10rpx;
}

.delete-btn {
  background-color: red;
  color: white;
  padding: 12rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  flex: 1;
}
