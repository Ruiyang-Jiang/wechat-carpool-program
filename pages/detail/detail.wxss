/* 通用卡片样式 */
.ride-card, .publisher-card{
  margin: 20rpx 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,.05);
}
.ride-card.past{ opacity:.55; }

/* header */
.ride-header{
  display:flex;
  align-items:center;
  margin-bottom:12rpx;
}
.badge{
  padding:4rpx 16rpx;
  font-size:24rpx;
  border-radius:16rpx;
  margin-right:12rpx;
}
.badge-driver   { background:#E8F9E5; color:#1BA400; }
.badge-passenger{ background:#E5F1FF; color:#0061CC; }

.ride-date{ font-size:26rpx; }
.date-past{ color:#999; text-decoration:line-through; }

.expired-badge{
  margin-left:12rpx;
  font-size:24rpx;
  color:#F76161;
}

/* body rows */
.ride-body .row{
  display:flex;
  align-items:center;
  margin:8rpx 0;
  font-size:26rpx;
}
.bold{ font-weight:600; }

/* 发布者信息 */
.publisher-row{
  display:flex;
  align-items:center;
  margin:6rpx 0;
  font-size:26rpx;
}
.publisher-row button{
  margin-left:20rpx;
  transform:scale(0.9);
}

/* 操作按钮 */
.action-btn{
  margin:40rpx 24rpx;
  font-size:32rpx;
}

/* loading */
.page-loading{
  padding:120rpx 0;
  text-align:center;
  font-size:30rpx;
  color:#999;
}
