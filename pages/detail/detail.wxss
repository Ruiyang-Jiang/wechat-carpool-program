.container {
  padding: 20rpx;
}

/* 信息标题 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 发布者信息 */
.publisher-info {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin: 15rpx 0;
}

.info {
  flex: 1;
  color: var(--text-secondary);
}

/* 详情卡片 */
.detail-card {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.detail-row:last-child {
  border-bottom: none;
}

.label {
  color: var(--text-secondary);
}

/* 按钮区域 */
.button-section {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.accept-btn {
  background: var(--primary-color);
  color: white;
  padding: 12rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  flex: 1;
  margin-right: 10rpx;
}

.edit-btn {
  background: var(--warning-color);
  color: white;
  padding: 12rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  flex: 1;
  margin-right: 10rpx;
}

.delete-btn {
  background: var(--danger-color);
  color: white;
  padding: 12rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  flex: 1;
}

.copy-btn {
  padding: 10rpx 30rpx;
  background: var(--primary-color);
  color: white;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.action-section {
  padding: 30rpx 20rpx;
}

.action-btn {
  width: 100%;
  margin-bottom: 20rpx;
}

.ride-btn {
  background: var(--success-color);
}

.accept-btn {
  background: var(--primary-color);
  color: white;
}

.edit-btn {
  background: var(--warning-color);
  color: white;
}

.delete-btn {
  background: var(--danger-color);
  color: white;
}

.action-btn:active {
  opacity: 0.8;
}

/* 禁用状态 */
.action-btn[disabled] {
  background: #cccccc;
  color: #ffffff;
  opacity: 0.6;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
