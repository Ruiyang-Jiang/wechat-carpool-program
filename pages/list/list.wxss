/* ---------- 顶部 Tab ---------- */
.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f2f2f2;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
}
.tab.active {
  color: #07c160;
  font-weight: 600;
  border-bottom: 4rpx solid #07c160;
}

/* ---------- 搜索提示 ---------- */
.search-tip {
  padding: 80rpx 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* ---------- 卡片 ---------- */
.ride-card {
  margin: 20rpx 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, .04);
}
.ride-card.past { opacity: .55; }

/* header */
.ride-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.badge {
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
  margin-right: 12rpx;
}
.badge-driver    { background: #E8F9E5; color: #1BA400; }
.badge-passenger { background: #E5F1FF; color: #0061CC; }

.ride-date { font-size: 26rpx; }
.date-past { color: #999; text-decoration: line-through; }

.expired-badge {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #F76161;
}

/* body */
.ride-body .row {
  display: flex;
  align-items: center;
  margin: 8rpx 0;
  font-size: 26rpx;
}
.ride-body .row .bold { font-weight: 600; }

/* 途经点样式 */
.stopovers-row{
  display:flex;
  align-items:flex-start;
  margin-top:8rpx;
}

.stopovers-label{
  font-size:26rpx;
  color:#666;
  margin-right:8rpx;
  flex-shrink:0;
}

.stopovers-list{
  display:flex;
  flex-wrap:wrap;
  gap:6rpx;
}

.stopover-item{
  background:#e8f4fd;
  color:#1976d2;
  padding:4rpx 8rpx;
  border-radius:12rpx;
  font-size:22rpx;
  border:1rpx solid #bbdefb;
}

.stopovers-display{
  display:flex;
  flex-wrap:wrap;
  gap:6rpx;
  margin-top:4rpx;
}

.stopover-tag{
  background:#e3f2fd;
  color:#1976d2;
  padding:4rpx 8rpx;
  border-radius:12rpx;
  font-size:22rpx;
  border:1rpx solid #bbdefb;
}

/* 匹配类型标签 */
.match-badge{
  background:#fff3e0;
  color:#f57c00;
  padding:4rpx 8rpx;
  border-radius:8rpx;
  font-size:20rpx;
  border:1rpx solid #ffcc02;
  margin-left:8rpx;
}
/* ---------- Join按钮样式 ---------- */
.join-actions{
  margin-top:16rpx;
  padding-top:12rpx;
  border-top:1rpx solid #f0f0f0;
  display:flex;
  justify-content:flex-end;
}

.join-btn{
  font-size:24rpx;
  padding:8rpx 20rpx;
  border-radius:20rpx;
  border:none;
}

.join-btn.primary{
  background:#07c160;
  color:#fff;
}

.join-btn.disabled{
  background:#f5f5f5;
  color:#999;
}

.join-btn.joined{
  background:#e8f5e8;
  color:#52c41a;
  border:1rpx solid #b7eb8f;
}

/* ---------- 排序条 ---------- */
.sort-bar{
  display:flex;
  gap:20rpx;
  padding:20rpx 24rpx 10rpx;
  background:#fff;
  border-bottom:1rpx solid #f1f1f1;
}
.picker{
  padding:12rpx 20rpx;
  font-size:26rpx;
  color:#333;
  background:#f7f7f7;
  border:1rpx solid #e0e0e0;
  border-radius:12rpx;
}
