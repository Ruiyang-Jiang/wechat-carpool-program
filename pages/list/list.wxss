/* ---------- 顶部 Tab ---------- */
.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f2f2f2;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
}
.tab.active {
  color: #07c160;
  font-weight: 600;
  border-bottom: 4rpx solid #07c160;
}

/* ---------- 搜索提示 ---------- */
.search-tip {
  padding: 80rpx 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* ---------- 卡片 ---------- */
.ride-card {
  margin: 20rpx 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, .04);
}
.ride-card.past { opacity: .55; }

/* header */
.ride-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.badge {
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
  margin-right: 12rpx;
}
.badge-driver    { background: #E8F9E5; color: #1BA400; }
.badge-passenger { background: #E5F1FF; color: #0061CC; }

.ride-date { font-size: 26rpx; }
.date-past { color: #999; text-decoration: line-through; }

.expired-badge {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #F76161;
}

/* body */
.ride-body .row {
  display: flex;
  align-items: center;
  margin: 8rpx 0;
  font-size: 26rpx;
}
.ride-body .row .bold { font-weight: 600; }
/* ---------- 排序条 ---------- */
.sort-bar{
  display:flex;
  gap:20rpx;
  padding:20rpx 24rpx 10rpx;
  background:#fff;
  border-bottom:1rpx solid #f1f1f1;
}
.picker{
  padding:12rpx 20rpx;
  font-size:26rpx;
  color:#333;
  background:#f7f7f7;
  border:1rpx solid #e0e0e0;
  border-radius:12rpx;
}
