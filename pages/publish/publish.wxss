.container {
  padding: 20rpx;
  background-color: #fff;
}

.subtab-container {
  display: flex;
  margin-bottom: 30rpx;
}

.subtab-btn {
  flex: 1;
  padding: 20rpx 0;
  border: none;
  background-color: #f0f0f0;
  color: #333;
  font-size: 30rpx;
}
.subtab-btn.active {
  background-color: #00aa00;
  color: #fff;
}

.form-group {
  margin: 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 180rpx;
  color: var(--text-secondary);
}

.input {
  flex: 1;
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.input:focus {
  border-color: var(--primary-color);
}

.picker {
  flex: 1;
  color: var(--text-color);
}

.placeholder {
  color: var(--text-light);
}

.submit-btn {
  margin: 40rpx 20rpx;
  background: var(--primary-color);
  color: white;
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.suggest-list {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  z-index: 1000;
  margin-top: 2rpx;
}

.suggest-container {
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  max-height: 400rpx;
  overflow-y: auto;
}

.suggest-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.suggest-item:last-child {
  border-bottom: none;
}

.suggest-item:active {
  background-color: #f5f5f5;
}

.suggest-item text {
  display: block;
}

.suggest-item text.desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}