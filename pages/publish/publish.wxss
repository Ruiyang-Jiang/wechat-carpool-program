.container {
  padding: 20rpx;
  background-color: #fff;
}

.subtab-container {
  display: flex;
  margin-bottom: 30rpx;
}

.subtab-btn {
  flex: 1;
  padding: 20rpx 0;
  border: none;
  background-color: #f0f0f0;
  color: #333;
  font-size: 30rpx;
}
.subtab-btn.active {
  background-color: #00aa00;
  color: #fff;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  width: 200rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 10rpx;
  border-radius: 8rpx;
}

.picker-view {
  width: 100%;
  border: 1px solid #ccc;
  padding: 10rpx;
  border-radius: 8rpx;
}

.submit-btn {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  background-color: #00aa00;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
}
