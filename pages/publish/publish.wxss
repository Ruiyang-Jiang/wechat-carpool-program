.container {
  padding: 20rpx;
  background-color: #fff;
}

.subtab-container {
  display: flex;
  margin-bottom: 30rpx;
}

.subtab-btn {
  flex: 1;
  padding: 20rpx 0;
  border: none;
  background-color: #f0f0f0;
  color: #333;
  font-size: 30rpx;
}
.subtab-btn.active {
  background-color: #00aa00;
  color: #fff;
}

.form-group {
  margin: 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 180rpx;
  color: var(--text-secondary);
}

.input {
  flex: 1;
}

.picker {
  flex: 1;
  color: var(--text-color);
}

.placeholder {
  color: var(--text-light);
}

.submit-btn {
  margin: 40rpx 20rpx;
  background: var(--primary-color);
  color: white;
}

.suggest-list {
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  margin-top: 5rpx;
}

.suggest-item {
  padding: 10rpx;
  border-bottom: 1px solid #eee;
}

.suggest-item:last-child {
  border-bottom: none;
}

.suggest-item text.desc {
  display: block;
  color: #999;
  font-size: 26rpx;
}