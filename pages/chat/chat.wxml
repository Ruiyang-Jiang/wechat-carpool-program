<view class="container">
  <!-- 头部信息 -->
  <view class="chat-header">
    <text class="chat-title">顺风车私聊</text>
    <button class="wechat-btn" bindtap="addWechat">加微信</button>
  </view>

  <!-- 消息展示区域 -->
  <scroll-view scroll-y="true" class="message-container">
    <block wx:for="{{messages}}" wx:key="index">
      <view class="message-item {{item.user_id === user_id ? 'sent' : 'received'}}">
        <image class="message-avatar" src="{{item.avatar || '/assets/default-avatar.png'}}"></image>
        <view class="message-bubble">
          <text class="message-content">{{item.content}}</text>
          <text class="message-time">{{item.timestamp}}</text>
        </view>
      </view>
    </block>
  </scroll-view>

  <!-- 底部输入框 -->
  <view class="input-container">
    <input class="message-input" placeholder="请输入消息..." bindinput="onInputMessage" value="{{messageContent}}" />
    <button class="send-btn" bindtap="sendMessage">发送</button>
  </view>
</view>
